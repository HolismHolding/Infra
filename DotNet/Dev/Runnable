version: "3.9"
services: 
    api:
        image: nefcanto/dotnet-dev:latest
        #restart: always
        container_name: ${Runnable}DotNetApi
        working_dir: /${Runnable}
        environment: 
            - HolismProjectsRoot=/HolismDotNet
        volumes: 
            - /HolismDotNet/Framework:/HolismDotNet/Framework
            - ${RunnablePath}:/${Runnable}
        ports: 
            - "5000:5000"
        command: >
            sh -c
            "
            dotnet build &
            dotnet Api/bin/Holism.${Runnable}.Api.dll &
            tail -f /dev/null
            "
        depends_on: 
            - "database"
    database:
        image: mcr.microsoft.com/mssql/server
        #restart: always
        user: root
        container_name: ${Runnable}MsSqlDatabase
        volumes:
            - /Nefcanto/Infra/DotNet/Dev/Database:/temp
            - ./Database:/Database
        environment: 
            - ACCEPT_EULA=Y
            - SA_PASSWORD=lksU2o412f7tBj58t07B
            - MSSQL_PID=Express
            - Runnable=${Runnable}
        ports:
            - 1433:1433
        command: >
            sh -c
            "
            /temp/Setup.sh &
            /opt/mssql/bin/sqlservr
            "