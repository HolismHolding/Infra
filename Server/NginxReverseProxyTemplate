server {
    listen 80;
    server_name accounts.zoodexchange.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    server_name accounts.zoodexchange.com;

    ssl_certificate /etc/letsencrypt/live/zoodexchange.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/zoodexchange.com/privkey.pem;

    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:3131;
    }
}