server {
    listen 80;
    server_name $Host;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    server_name $Host;

    ssl_certificate /etc/letsencrypt/live/$MainHost/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/$MainHost/privkey.pem;

    include /etc/letsencrypt/options-ssl-nginx.conf;

    location / {
        proxy_pass http://localhost:$RandomPort;
    }
}